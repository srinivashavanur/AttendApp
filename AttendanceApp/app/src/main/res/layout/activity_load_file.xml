<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="odu.cs.attendanceapp.LoadFile"
    android:rowCount="15"
    android:columnCount="3">

    <TextView android:text="Schedule File: "
        android:layout_row="0"
        android:layout_column="0"
        style="@style/MyTextViewStyle"/>

    <EditText android:id="@+id/etFilePath"
        style="@style/CourseEditTextStyle"
        android:ems="10"
        android:layout_row="0"
        android:layout_column="1" />

    <Button android:id="@+id/btnFilePath"
        android:text="..."
        android:layout_row="0"
        android:layout_column="2"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Schedule"
        android:id="@+id/btnLoad"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView android:text="Enrollment File: "
        android:layout_row="2"
        android:layout_column="0"
        style="@style/MyTextViewStyle"/>

    <EditText android:id="@+id/etEnrollPath"
        style="@style/CourseEditTextStyle"
        android:ems="10"
        android:layout_row="2"
        android:layout_column="1" />

    <Button android:id="@+id/btnEnrollPath"
        android:text="..."
        android:layout_row="2"
        android:layout_column="2"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Enrollment"
        android:id="@+id/btnLoadEnroll"
        android:layout_row="3"
        android:layout_column="1" />

    <TextView android:text="Location Schedule File: "
        android:layout_row="4"
        android:layout_column="0"
        style="@style/MyTextViewStyle"/>

    <EditText android:id="@+id/etLSPath"
        style="@style/CourseEditTextStyle"
        android:ems="10"
        android:layout_row="4"
        android:layout_column="1" />

    <Button android:id="@+id/btnLSPath"
        android:text="..."
        android:layout_row="4"
        android:layout_column="2"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Schedule"
        android:id="@+id/btnLoadLSFile"
        android:layout_row="5"
        android:layout_column="1" />

    <TextView android:text="Teacher File: "
        android:layout_row="6"
        android:layout_column="0"
        style="@style/MyTextViewStyle"/>

    <EditText android:id="@+id/etTeacherPath"
        style="@style/CourseEditTextStyle"
        android:ems="10"
        android:layout_row="6"
        android:layout_column="1" />

    <Button android:id="@+id/btnTeacherPath"
        android:text="..."
        android:layout_row="6"
        android:layout_column="2"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Teacher File"
        android:id="@+id/btnTeacherFile"
        android:layout_row="7"
        android:layout_column="1" />

</GridLayout>
